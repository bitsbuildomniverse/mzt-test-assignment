{
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "vueIndentScriptAndStyle": true
      }
    }
  ]
}
